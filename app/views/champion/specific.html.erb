<% @title=@champions.first_name %>

<div class = "row large-12 columns">
  <h1> Champion Profile: <%= @champions.first_name %> <%= @champions.last_name %> </h1>
<div>

  <div class = "row large-12 columns">
    <div class = "large-4 columns">
      <%=image_tag(@champions.headshot,width:"100%") %>
    </div>
    <div class = "large-8 columns">
      <%= simple_format(@champions.long_text) %>
      <% if @champions.contact != nil %>
        <% if @champions.contact.include? "@" %>
          <% linkke = "mailto:"+@champions.contact%>
            <p> Contact: <a href= <%= linkke %> ><%= @champions.contact %></a> </p>
        <%else %>
          <p> Contact: <a href= <%= @champions.contact %> ><%= @champions.contact %></a></p>
        <% end %>
      <% end %>
    </div>
  </div>
