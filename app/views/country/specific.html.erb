<% @title=@countries.name %>

<div class = "row large-12 columns">
    <h3>Alliance Profile: <%=@countries.name %></h3>
</div>

<div class = "row">
  <div class = "large-8 columns">
    <ul class='circles'>
      <li> Key Priorities:  <%= @countries.key_p %> </li>
      <li> Key Activities:  <%= @countries.key_a %> </li>
      <li> National Nutrition Stats:  <%= @countries.nns %> </li>
      <li> Contact Details:  <%= @countries.contact %> </li>
      <li> Website:  <%= @countries.website %> </li>
    </ul>
  </div>
  <div class = "large-4 columns">
      <%=image_tag(@countries.flag.url, alt: @countries.name, title: @countries.name)%>
      <br>
      <br>
      <%=image_tag(@countries.photo.url, alt: @countries.name, title: @countries.name)%>
  </div>
</div>

<div class = "row large-12 columns">
    <h3>Latest News</h3>
    <p> <%= @countries.news %> </p>
</div>
