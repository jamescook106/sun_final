<% @title=@countries.name %>

<div class = "row large-12 columns">
    <h3><%=@countries.name %></h3>
</div>

<div class = "row">
  <div class = "large-4 columns">
      <%=image_tag(@countries.photo.url, alt: @countries.name, title: @countries.name)%>
  </div>
  <div class = "large-8 columns">
    <ul class='circles'>
      <li> <b>Priorities:</b>  <%= @countries.key_p %> </li>
      <li> <b>Key Activities:</b>  <%= @countries.key_a %> </li>
      <li> <b>National Nutrition Stats:</b>  <%= @countries.nns %> </li>
      <li> <b>Contact Details:</b>  <%= mail_to @countries.contact,@countries.contact%> </li>
      <li> <%= link_to 'Website' , @countries.website %> </li>
    </ul>
  </div>
</div>

<div class = "row large-12 columns">
    <h3>Latest News</h3>
    <p> <%= @countries.news %> </p>
</div>
