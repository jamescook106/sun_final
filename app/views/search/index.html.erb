  <div class = "row large-12 columns">
    <h1> Resources</h1>
  <div>

    <div class = "row">
    <% @resources.each do |apple| %>
      <div class = "large-4 columns">
        <% url = '/'+I18n.locale.to_s+'/knowledge/' + apple.id.to_s %>
        <h4> Resource: <%= apple.name %> </h4>
        <%= simple_format(apple.short) %>

        <% if apple.contenttype=="Document"  && apple.file.exists?%>
          <% if apple.protected %>
            <% if user_signed_in? %>
              <%=link_to image_tag("document.png", alt: apple.name, title: apple.name), apple.file.url(:original, false)%>
            <% else %>
              <%=image_tag("document.png", alt: apple.name, title: apple.name)%>
            <% end %>
          <% else %>
            <%=link_to image_tag("document.png", alt: apple.name, title: apple.name), apple.file.url(:original, false)%>
          <% end %>
        <br>
        <% end %>

        <% if apple.contenttype=="Picture"  && apple.file.exists?%>
          <% if apple.protected %>
            <% if user_signed_in? %>
              <%=link_to image_tag(apple.file.url, alt: apple.name, title: apple.name), apple.file.url(:original, false)%>
            <% else %>
              <%=image_tag(apple.file.url, alt: apple.name, title: apple.name)%>
            <% end %>
          <% else %>
            <%=link_to image_tag(apple.file.url, alt: apple.name, title: apple.name), apple.file.url(:original, false)%>
          <% end %>
        <br>
        <% end %>

        <% if apple.protected %>
          <% if user_signed_in? %>
            <% if apple.file.exists?%>
              <%= link_to "Download", apple.file.url(:original, false) %> <br>
            <% else %>
              <a href= <%= apple.external %> >Link to External Content</a> <br>
            <% end %>
          <% end %>
        <% else %>
          <% if apple.file.exists?%>
            <%= link_to "Download", apple.file.url(:original, false) %> <br>
          <% else %>
            <a href= <%= apple.external %> >Link to External Content</a> <br>
          <% end %>
        <% end %>
        <% if apple.protected %>
          <% if user_signed_in? %>
            <a href=<%= url %>>Full Description </a>
          <% else %>
            <%=t('m_resource.protected')%>
          <% end %>
        <% else %>
          <a href=<%= url %>>Full Description </a>
        <% end %>
      </div>
    <% end %>
    </div>


  <% if @resources.blank? %>
    <h4>There are no resources containing the term <%= params[:search] %>.</h4>
  <% end %>
